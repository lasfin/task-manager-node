.container
    .section
        .row
            form.col.s12
                .row
                    .input-field.col.s6
                        input#name.validate(type='text')
                        label(for='name') Name
                .row
                    .input-field.col.s12
                        i.material-icons.prefix mode_edit
                        textarea#info.materialize-textarea
                        label(for='info') Additional info
                .row
                    .col.s6
                        button#clear.btn.waves-effect.waves-light.blue.lighten-3
                            | Clear fields
                            i.material-icons.right clear_all
                    .col.s6
                        button#submit.btn.waves-effect.waves-light.right(name='action')
                            | Submit
                            i.material-icons.right send