.container
    .section
        .row
            form.col.s12
                .row
                    .input-field.col.s6
                        input#title.validate(type='text')
                        label(for='title') Title
                    .input-field.col.s6
                        select#priority
                            option(value='', disabled='', selected='')
                            option(value='1') 1
                            option(value='2') 2
                            option(value='3') 3
                            option(value='4') 4
                            option(value='5') 5
                        label Priority
                .row
                    .input-field.col.s12
                        i.material-icons.prefix mode_edit
                        textarea#subject.materialize-textarea
                        label(for='subject') Subject
                .row
                    .input-field.col.s12
                        input#tags.validate(type='text')
                        label(for='tags') Tags
                .row
                    .col.s6
                        button#clear.btn.waves-effect.waves-light.blue.lighten-3
                            | Clear fields
                            i.material-icons.right clear_all
                    .col.s6
                        button#submit.btn.waves-effect.waves-light.right(name='action')
                            | Submit
                            i.material-icons.right send